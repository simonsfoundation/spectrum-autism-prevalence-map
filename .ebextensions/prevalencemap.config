files:
    /tmp/convert_systemd_to_script.sh:
        owner: root
        group: root
        mode: 000755
        content: |
            #!/usr/bin/env bash
            sed  -e "s/\=/\=\'/g" -e "s/$/'/g" -e "s/^/export /g" /opt/elasticbeanstalk/deployment/env > /var/app/current/spectrum/.env

    /etc/nginx/conf.d/elasticbeanstalk/01_statics.conf:
        mode: 000644
        owner: root
        group: root
        content: |
            location /static/ {
                root /var/www/html/static/;
            }


option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: spectrum/wsgi.py


container_commands:
  01configure:
    command: "mv spectrum src && mv src/* ."
  02createenv:
    command: "bash -c /tmp/convert_systemd_to_script.sh"
  03collectstatics:
    command: "source $PYTHONPATH/activate && source /var/app/current/spectrum/.env && python manage.py collectstatic --noinput"
  04migrate:
    command: "source $PYTHONPATH/activate && source /var/app/current/spectrum/.env && python manage.py migrate --noinput"
  05pull_studies_from_gsheets:
    command: "source $PYTHONPATH/activate && source /var/app/current/spectrum/.env && python manage.py pull_studies_from_gsheets"
  06reloadnginx:
    command: "nginx -t && nginx -s reload"